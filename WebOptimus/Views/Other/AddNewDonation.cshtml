@model WebOptimus.Models.ViewModel.OtherDonationViewModel
@{
    ViewData["Title"] = "Add New Donation";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Set-up new fund campaign</h1>
                <p>Use this section to set-up new donation campaign for non death related.</p>
               
            </div>
            <div class="col-sm-6">
                <a class="btn btn-xs btn-outline-primary float-md-right" style="width:100px; float:right; text-align: center;" onclick="@("window.location.href='" + @Url.Action("Index", "Other") + "'");"><i class="fas fa-arrow-left"></i>  Back </a>
            </div>
        </div>
    </div>
</div>

<section class="section">
    <div class="container-fluid">
        <form asp-controller="Other" asp-action="AddNewDonation" method="post" autocomplete="off">
            @Html.AntiForgeryToken()
           
            <div class="row">
                <!-- left column -->
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        <ul>
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <li>@error.ErrorMessage</li>
                            }
                        </ul>
                    </div>
                }

                <div class="col-md-6">
                    <div class="card card-success">
                        <div class="card-header">
                            <h3 class="card-title">Funds Information</h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label">Target Amount (£): </label>
                                <div class="col-sm-8">
                                    <input type="number" class="form-control currency-input" name="TargetAmount" placeholder="Target Amount (£)" asp-for="TargetAmount" step="0.01" min="0">
                                    <span asp-validation-for="TargetAmount" class="text-danger"></span>
                                </div>
                            </div>
                          
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label">Minimum Amount: </label>
                                <div class="col-sm-8">
                                    <input type="number" class="form-control currency-input" name="MinmumAmount" placeholder="Minimum Amount (£)" asp-for="MinmumAmount" step="0.01" min="0">
                                    <span asp-validation-for="MinmumAmount" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label">Start Date: </label>
                                <div class="col-sm-8">
                                    <input id="StartDate" name="StartDate" type="text" class="form-control datepicker" asp-for="StartDate" placeholder="Please select Start Date">
                                    <span asp-validation-for="StartDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label">End Date: </label>
                                <div class="col-sm-8">
                                    <input id="ClosedDate" name="ClosedDate" type="text" class="form-control datepicker" asp-for="ClosedDate" placeholder="Please select End Date">
                                    <span asp-validation-for="ClosedDate" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card card-dark">
                        <div class="card-header">
                            <h3 class="card-title">Title/Brief Summary (For example: Donation for website maintenance )</h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Summary: </label>
                                <div class="col-sm-10">
                                    <input type="text" name="Summary" class="form-control" placeholder="Summary" asp-for="Summary">
                                    <span asp-validation-for="Summary" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Full Description (This is what members will see)</h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body pad">
                            <div class="mb-3">
                                <textarea name="Description" class="textarea" placeholder="Please enter full details so all members can read" asp-for="Description"
                                          style="width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;"></textarea>
                              
                            </div>
                        </div>
                    </div>
                </div>
              @*  
                <div class="form-group">
                    <input type="checkbox" id="lessorOrGroup" name="IsActive">
                    <label class="container2"> Please check to make this donation active to members (leaving it unchecked will NOT make the donation visible). </label> <br />
                    <span asp-validation-for="IsActive" class="text-danger"></span>
                </div> *@
            </div>
     
            <div class="col-md-12">
                <button type="submit" class="btn btn-primary float-left">Submit</button>
               
            </div>
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <!-- jQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <!-- jQuery UI (Include This for Datepicker) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.css">

   
    <!-- Include Summernote CSS/JS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.18/summernote-bs4.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.18/summernote-bs4.min.js"></script>

    <script>
                          $(document).ready(function () {
            var today = new Date();

            function parseDate(str) {
                if (!str) return null;
                var parts = str.split("/");
                return new Date(parts[2], parts[1] - 1, parts[0]); // Convert DD/MM/YYYY to Date object
            }

            function formatDate(date) {
                if (!date) return "";
                var dd = String(date.getDate()).padStart(2, "0");
                var mm = String(date.getMonth() + 1).padStart(2, "0");
                var yyyy = date.getFullYear();
                return dd + "/" + mm + "/" + yyyy;
            }

            // Initially disable the End Date field
            $("#ClosedDate").prop("disabled", true);

            // Initialize Start Date Picker
            $("#StartDate").datepicker({
                dateFormat: "dd/mm/yy",  // Ensure DD/MM/YYYY format
                changeMonth: true,
                changeYear: true,
                minDate: today, // Prevent past dates
                onSelect: function (selectedDate) {
                    var startDate = parseDate(selectedDate);
                    $("#ClosedDate").prop("disabled", false); // Enable the End Date field when Start Date is selected
                    $("#ClosedDate").datepicker("option", "minDate", startDate); // Set minDate dynamically
                    $("#ClosedDate").val(""); // Clear the End Date to force user selection again
                }
            });

            // Initialize End Date Picker
            $("#ClosedDate").datepicker({
                dateFormat: "dd/mm/yy",  // Ensure DD/MM/YYYY format
                changeMonth: true,
                changeYear: true,
                beforeShow: function () {
                    var startDate = $("#StartDate").datepicker("getDate");
                    if (startDate) {
                        $(this).datepicker("option", "minDate", startDate); // Ensure End Date starts from Start Date
                    }
                }
            });
        });




    </script>
}
