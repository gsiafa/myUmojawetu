@model WebOptimus.Models.ViewModel.OtherDonationDetailsViewModel
@{
    ViewData["Title"] = "Donation Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

<section class="content-header">
    <div class="container-fluid">
        <div class="row col-sm-12">
            <div class="col-sm-12">
                <h1>Donation Campaign: <strong>@Model.Summary</strong></h1>
            </div>
            <div class="col-sm-12">
                <a class="btn btn-outline-success float-md-right" asp-action="Index" asp-controller="Other">
                    <i class="fas fa-arrow-left"></i> Back
                </a>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- Left Column -->
            <div class="col-md-6">
                <div class="card card-info">
                    <div class="card-header">
                        <h3 class="card-title">Campaign Details</h3>
                    </div>
                    <div class="card-body">
                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label">Campaign Reference:</label>
                            <div class="col-sm-8">
                                <input type="text" disabled class="form-control" value="@Model.CauseCampaignpRef" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label">Target Amount (£):</label>
                            <div class="col-sm-8">
                                <input type="text" disabled class="form-control" value="£@Model.TargetAmount.ToString("N2")" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label">Minimum Contribution (£):</label>
                            <div class="col-sm-8">
                                <input type="text" disabled class="form-control" value="£@Model.MinmumAmount?.ToString("N2")" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label">Start Date:</label>
                            <div class="col-sm-8">
                                <input type="text" disabled class="form-control" value="@Model.StartDate?.ToString("dd/MM/yyyy")" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label">End Date:</label>
                            <div class="col-sm-8">
                                <input type="text" disabled class="form-control" value="@Model.ClosedDate?.ToString("dd/MM/yyyy")" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label">Status:</label>
                            <div class="col-sm-8">
                                <input type="text" disabled class="form-control"
                                       value="@(Model.Status)" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Column -->
            <div class="col-md-6">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Campaign Description</h3>
                    </div>
                    <div class="card-body">
                        <p>@Html.Raw(Model.Description)</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Created By Information -->
        <div class="row">
            <!-- Campaign Creator -->
            <div class="col-md-6">
                <div class="card card-warning">
                    <div class="card-header">
                        <h3 class="card-title">Campaign Creator</h3>
                    </div>
                    <div class="card-body">
                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label">Created By:</label>
                            <div class="col-sm-8">
                                <input type="text" disabled class="form-control" value="@Model.CreatedBy" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label">Date Created:</label>
                            <div class="col-sm-8">
                                <input type="text" disabled class="form-control" value="@Model.DateCreated.ToString("dd/MM/yyyy")" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Approval or Decliner Details -->
            <div class="col-md-6">
                @if (Model.Status == "Approved")
                {
                    <div class="card card-success">
                        <div class="card-header">
                            <h3 class="card-title">Approval's Details</h3>
                        </div>
                        <div class="card-body">
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label">Approved By:</label>
                                <div class="col-sm-8">
                                    <input type="text" disabled class="form-control" value="@Model.ApprovedBy" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label">Approval's Note:</label>
                                <div class="col-sm-8">
                                    <textarea disabled class="form-control">@Model.ApprovalOrDeclinerNote</textarea>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label">Approval Date:</label>
                                <div class="col-sm-8">
                                    <input type="text" disabled class="form-control" value="@Model.ApprovedDate?.ToString("dd/MM/yyyy")" />
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else if (Model.Status == "Declined")
                {
                    <div class="card card-danger">
                        <div class="card-header">
                            <h3 class="card-title">Decliner's Details</h3>
                        </div>
                        <div class="card-body">
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label">Declined By:</label>
                                <div class="col-sm-8">
                                    <input type="text" disabled class="form-control" value="@Model.DeclinedBy" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label">Decliner's Note:</label>
                                <div class="col-sm-8">
                                    <textarea disabled class="form-control">@Model.ApprovalOrDeclinerNote</textarea>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label">Declined Date:</label>
                                <div class="col-sm-8">
                                    <input type="text" disabled class="form-control" value="@Model.DeclinedDate?.ToString("dd/MM/yyyy")" />
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>


        <!-- Approve/Decline Buttons (Only show if current user did NOT create the campaign) -->
        @if (@ViewBag.CurrentUserDependentId != "true" && Model.Status == "Pending General Approval")
        {
            <div class="col-md-12 text-center">
                <button class="btn btn-success" data-toggle="modal" data-target="#approveModal">
                    <i class="fas fa-check"></i> Approve
                </button>

                <button class="btn btn-danger" data-toggle="modal" data-target="#declineModal">
                    <i class="fas fa-times"></i> Decline
                </button>
            </div>
        }

        <!-- Approve Modal -->
        <div class="modal fade" id="approveModal" tabindex="-1" role="dialog" aria-labelledby="approveModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="approveModalLabel">Approval Note</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <form id="approveForm" method="post" asp-action="Approve">
                        <div class="modal-body">
                            <div class="form-group">
                                <label for="approvalNote">Please enter the reason for approval:</label>
                                <textarea class="form-control" id="approvalNote" name="approvalNote" required></textarea>
                            </div>
                            <input type="hidden" name="id" value="@Model.Id" />
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-primary">Submit Approval</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Decline Modal -->
        <div class="modal fade" id="declineModal" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Decline Note</h5>
                        <button type="button" class="close" data-dismiss="modal">
                            <span>&times;</span>
                        </button>
                    </div>
                    <form method="post" asp-action="Decline">
                        <div class="modal-body">
                            <label for="declinedNote">Enter reason for declining:</label>
                            <textarea class="form-control" name="declinedNote" required></textarea>
                            <input type="hidden" name="id" value="@Model.Id" />
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-danger">Submit Decline</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Delete Modal -->
        <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Confirm Delete</h5>
                        <button type="button" class="close" data-dismiss="modal">
                            <span>&times;</span>
                        </button>
                    </div>
                    <form method="post" asp-action="Delete">
                        <div class="modal-body">
                            <p>Are you sure you want to delete this donation?</p>
                            <input type="hidden" name="id" value="@Model.Id" />
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
}