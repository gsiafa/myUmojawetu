@model WebOptimus.Models.ViewModel.PopUpNotificationViewModel

@{
    ViewData["Title"] = "Edit Notification";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4>New Notification</h4>
<hr />
<form method="post" asp-action="EditNotification" asp-controller="PopUpNotification" id="myForm">
    <div class="row">
        <input hidden asp-for="Id" />
        <div class="col-md-12">
      
            <div class="form-group">
                <div class="mb-3">
                    <label asp-for="Description" class="control-label">Full Details <span class="text-danger">*</span></label>
                    <textarea asp-for="Description" class="textarea" placeholder="Place some text here"
                              style="width: 100%; height: 300px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
         
            <div class="form-group">
                <input type="checkbox" name="IsActive" value="true" checked />
                <strong> Broadcast Notification to all members immediately.</strong>

            </div>
            <div class="ml-auto mt-4">
                <small class="btn btn-dark signInText" style="float:right;">
                    <a class="signInText" style="cursor: pointer; color:#fff !important; text-decoration: none; float:right;" asp-action="Index" asp-controller="Notification">Back</a>
                </small>
                <small>
                    <button type="submit" class="btn btn-success justify-content-end signInText" style="cursor: pointer; color:#fff !important; text-decoration: none;">Submit</button>
                </small>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


