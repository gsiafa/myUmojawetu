@model WebOptimus.Models.ViewModel.ReportedDeathViewModel
@{
    ViewData["Title"] = "Report Death";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Report New Death</h1>
                <p>Use this form to report a new death</p>
            </div>
            <div class="col-sm-6">
                <a class="btn btn-xs btn-outline-primary float-md-right" style="width:100px; float:right; text-align:center;" onclick="@("window.location.href='" + @Url.Action("ReportedDeaths", "Family") + "'");"><i class="fas fa-arrow-left"></i> Back</a>
            </div>
        </div>
    </div>
</div>

<section class="section">
    <div class="container-fluid">
        <form asp-controller="Family" asp-action="AddDeath" method="post" enctype="multipart/form-data" autocomplete="off">
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-info">
                        <div class="card-header">
                            <h3 class="card-title">About the Deceased</h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label">Name of person: </label>
                                <div class="col-sm-8">
                                    <select class="form-control" asp-for="DependentId" asp-items="Model.Dependents" id="ddlDependents">
                                        <option selected disabled>Please select</option>
                                    </select>
                                    <span asp-validation-for="DependentId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label">Registration Number: </label>
                                <div class="col-sm-8">
                                    <input id="regNum" class="form-control" readonly asp-for="PersonRegNumber" />
                                    <input type="hidden" asp-for="PersonRegNumber" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label">Year Of Birth:</label>
                                <div class="col-sm-8">
                                    <input type="text" id="yr1" class="form-control" readonly asp-for="PersonYearOfBirth">
                                    <input type="hidden" asp-for="PersonYearOfBirth" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label">Date Joined:</label>
                                <div class="col-sm-8">
                                    <input type="text" id="datejoined" asp-for="DateJoined" placeholder="Date Joined" class="form-control" readonly>
                                </div>
                            </div>
                            <div class="form-group row" hidden>
                                <label class="col-sm-4 col-form-label">County:</label>
                                <div class="col-sm-8">
                                    <input type="text" id="cityId" name="CityId" class="form-control" hidden>
                                </div>
                            </div>
                            <div class="form-group row" hidden>
                                <label class="col-sm-4 col-form-label">Region:</label>
                                <div class="col-sm-8">
                                    <input type="text" id="regionId" name="RegionId" class="form-control">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label">County:</label>
                                <div class="col-sm-8">
                                    <input type="text" id="cityName" name="CityName" class="form-control" readonly>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label">Region:</label>
                                <div class="col-sm-8">
                                    <input type="text" id="regionName" name="RegionName" class="form-control" readonly>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="card card-danger">
                        <div class="card-header">
                            <h3 class="card-title">Death Information</h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label">Upload Deceased Photo: </label>
                                <div class="col-sm-8">
                                    <input type="file" name="DeceasedPhoto" class="form-control" />
                                  
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label">Date of Death: </label>
                                <div class="col-sm-8">
                                    <input name="DateOfDeath" type="text" class="form-control datepicker" asp-for="DateOfDeath" placeholder="Please select Date">
                                    <span asp-validation-for="DateOfDeath" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label">Death Location: </label>
                                <div class="col-sm-8">
                                    <input type="text" name="DeathLocation" class="form-control" asp-for="DeathLocation">
                                    <span asp-validation-for="DeathLocation" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label">Place of Burial: </label>
                                <div class="col-sm-8">
                                    <input type="text" name="PlaceOfBurial" class="form-control" asp-for="PlaceOfBurial">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label">Other Relevant Information</label>
                                <div class="col-sm-8">
                                    <textarea name="OtherRelevantInformation" class="textarea" placeholder="Please enter full details so all members can read" asp-for="OtherRelevantInformation"
                                              style="width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;"></textarea>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label">Reported By: </label>
                                <div class="col-sm-8">
                                    <input type="text" name="ReportedBy" class="form-control" asp-for="ReportedBy">
                                    <span asp-validation-for="ReportedBy" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label">Relationship to Decease: </label>
                                <div class="col-sm-8">
                                    <input name="RelationShipToDeceased" type="text" class="form-control" asp-for="RelationShipToDeceased">
                                    <span asp-validation-for="RelationShipToDeceased" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label">Reporter Contact Number</label>
                                <div class="col-sm-8">
                                    <input type="text" name="ReporterContactNumber" class="form-control" asp-for="ReporterContactNumber">
                                    <span asp-validation-for="ReporterContactNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label">Date Reported: </label>
                                <div class="col-sm-8">
                                    <input type="text" name="ReportedOn" class="form-control datepicker" asp-for="ReportedOn" placeholder="Please select Date">
                                    <span asp-validation-for="ReportedOn" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <a asp-action="ReportedDeaths" asp-controller="Family" class="btn btn-secondary float-left">Cancel</a>
                <button type="submit" class="btn btn-primary float-right">Report Death</button>
                
            </div>
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.css">
    <!-- Include Summernote CSS/JS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.18/summernote-bs4.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.18/summernote-bs4.min.js"></script>

    <script>
        $(document).ready(function () {
            var today = new Date();
            $('.datepicker').datepicker({
                dateFormat: 'dd/mm/yy',     // UK date format
                autoclose: true,            // Close the picker after selecting a date
                todayHighlight: true,       // Highlight today's date
                changeMonth: true,          // Allow changing the month
                changeYear: true,           // Allow changing the year
                yearRange: "c-10:c",       // Limit year selection to 100 years in the past up to the current year
                defaultDate: today,         // Set default date to today
                maxDate: today              // Limit date selection to today and earlier
            }).datepicker('setDate', today); // Set the initial date to today's date

            // Initialize Summernote for the OtherRelevantInformation field
            $('.textarea').summernote({
                height: 200,   // Set editor height
                minHeight: null, // Set minimum height of editor
                maxHeight: null, // Set maximum height of editor
                focus: true     // Set focus to editable area after initializing summernote
            });

            // Re-populate fields if they already have values
            if ($("#ddlDependents").val()) {
                updateDependentDetails($("#ddlDependents").val());
            }

            $("#ddlDependents").on("change", function () {
                updateDependentDetails($(this).val());
            });
        });

        function updateDependentDetails(dependentId) {
            $.ajax({
                url: '/Family/GetDependentDetails/' + dependentId,
                type: 'GET',
                dataType: 'json',
                success: function (data) {
                    $('#regNum').val(data.personRegNumber).change();
                    $('#yr1').val(data.personYearOfBirth).change();
                    $('#datejoined').val(formatDate(data.dateCreated)).change();
                    $('#cityId').val(data.cityId).change();
                    $('#regionId').val(data.regionId).change();
                    $('#cityName').val(data.cityName).change();
                    $('#regionName').val(data.regionName).change();
                },
                error: function (xhr, status, error) {
                    console.error("Error: " + error);
                }
            });
        }

        function formatDate(dateString) {
            if (dateString && dateString !== "0001-01-01T00:00:00") {
                return moment(dateString).format('DD/MM/YYYY');
            }
            return '';  // Return empty string for default date
        }
    </script>
}
