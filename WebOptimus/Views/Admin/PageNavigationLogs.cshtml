@model IEnumerable<WebOptimus.Models.PageNavigationLog>
@{
    ViewData["Title"] = "Page Navigation Logs";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!-- Content Wrapper. Contains page content -->
<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Page Navigation Logs</h1>
            </div><!-- /.col -->
          
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->


@if (Model.Count() > 0)
{
    <!-- right col (We are only adding the ID to make the widgets sortable)-->
    <section class="col-lg-12 connectedSortable">
        <div class="card">
            <div class="card-header border-transparent" style="background-color: green; color: white;">
                <h3 class="card-title"> <strong> </strong></h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table m-0" id="myTable">
                        <thead>
                            <tr class="text-center">
                                <th>Email</th>
                                <th>Page Name</th>
                                <th>Action Name</th>
                                <th>Controller Name</th>
                                <th>Timestamp</th>

                            

                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var log in Model)
                            {
                                <tr>
                                    <td>@log.Email</td>
                                    <td>@log.PageName</td>
                                    <td>@log.ActionName</td>
                                    <td>@log.ControllerName</td>
                                    <td>@log.Timestamp.ToString("g")</td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.card-body -->
            <!-- /.card-footer -->
        </div>

    </section>
    <!-- right col -->
}
else
{
    <p>No record exists...</p>
}





@section Scripts {
    <script src="~/admin/js/table.js" asp-append-version="true"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/jquery-ui.min.js"></script>

    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css">
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js "></script>
    <script>
        $(document).ready(function () {
            $('#changeLogTable').DataTable({
                "paging": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]]
            });
        });
    </script>
}