@model WebOptimus.Models.ViewModel.ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-banner-wrap text-center bg-cover" style="background: linear-gradient(to top, rgba(0,56,96,0.7), rgba(0,56,96,0.7)), url(/assets/home/home1.jpg) no-repeat 50% 50%;background-size: cover;">
    <div class="container">
        <div class="page-heading text-white">
            <h1>Change Password</h1>
        </div>

    </div>
</div>

<section class="contact-page-wrap section-padding">
    <div class="container">
    
        <div class="row pt-5">
            <div class="col-12 col-xl-8 offset-xl-2 text-center">
                <div class="section-title">
                </div>
            </div>

            <div class="col-12 col-lg-12">
            </div>


            <div class="row">
                <div class="col-12 col-md-6 bsb-tpl-bg-platinum">
                    <h2 class="contact-title">Change Your Password</h2>
                    <p>Please change your password by entering your current password and then a new password. </p>

                </div>
                <div class="col-12 col-md-6 bsb-tpl-bg-lotion">
                    <div class="p-3 p-md-4 p-xl-5">


                        <form method="post" id="theForm" asp-action="ChangePassword" asp-controller="Admin" class="row">
                        
                                <div class="form-group">
                                <input type="password" class="form-control " name="Password" asp-for="Password" placeholder="New Password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                                </div> <br /> <br />
                                <div class="form-group">
                                <input type="password" class="form-control " id="email" name="ConfirmPassword" asp-for="ConfirmPassword" placeholder="Confirm Password">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                   
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="theme-btn3 btn btn-custom ">Submit</button>

                                </div>
                            <input id="EmailAddress" class="TextBoxclass" asp-for="EmailAddress" stype="text" style="visibility:hidden" value="@ViewBag.EmailAddress" />


                        </form>
                      


                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts
   {

    <partial name="_ValidationScriptsPartial" />

}