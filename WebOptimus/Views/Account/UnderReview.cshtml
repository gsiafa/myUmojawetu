@{
    ViewData["Title"] = "Registration Under Review";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="slider-section"
     style="background-image: url('/assets/img/Flag-of-Tanzania.png'); background-repeat: no-repeat; background-position: center; background-size: cover; width: 100%; height: 400px; margin: 0; padding: 0; position: relative;">
    <div class="slider-container" style="width: 100%; height: 100%;">
        <div class="slider-text" style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); margin: 0;">
            <h1 class="animated-text" style="color: #fff!important">Waiting for Approval</h1>
        </div>
    </div>
</div>


<section class="confirmation-page section-padding">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10 col-12">
                <div class="confirmation-card text-center">
                    <div class="confirmation-message">
                        <p>Thank you for registering with us.</p>
                        <p><strong>Your registration number is: @ViewBag.reg</strong></p>
                        <p>You will need your registration number when you contact us regarding your account, so please make a note of it.</p>
                        <p>Your registration is now awaiting approval. We'll send you an email with further information shortly.</p>
                    </div>
                    <a asp-action="Login" asp-controller="Account" class="theme2-btn">Login</a>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .confirmation-page {
        padding: 60px 0; /* Adjust padding for the section */
    }

    .confirmation-card {
        background-color: #f9f9f9; /* Soft background color */
        border-radius: 10px; /* Rounded corners */
        padding: 40px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1); /* Subtle shadow for depth */
        margin-top: 20px;
    }

    .confirmation-message p {
        font-size: 18px;
        line-height: 1.8;
        color: #333;
        margin-bottom: 20px;
    }

    .confirmation-message strong {
        font-size: 20px;
        color: #007bff; /* Accent color for the registration number */
    }

    .theme2-btn {
        background-color: #28a745; /* Green background */
        color: #fff;
        padding: 10px 30px;
        border-radius: 5px;
        transition: all 0.3s ease;
    }

        .theme2-btn:hover {
            background-color: #fff;
            color: #28a745; /* Green text on hover */
            border: 2px solid #28a745;
        }

</style>

