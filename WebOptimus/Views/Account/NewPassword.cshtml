@model WebOptimus.Models.ViewModel.ResetPasswordViewModel
@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Views/Shared/_cLayout.cshtml";
}

<section class="contact-page-wrap section-padding">
    <div class="container">
        <!-- Form Section -->
        <div class="row">
            <!-- Form Information Column -->
            <div class="col-12 col-md-6">
                <h2 class="contact-title">Change Your Password</h2>
                <p>To update your password, please enter your current password followed by your new password.</p>
            </div>

            <!-- Form Column -->
            <div class="col-12 col-md-6 bsb-tpl-bg-platinum">
                <div class="p-3 p-md-4 p-xl-5">
                    <partial name="_notify" />

                    <form method="post" id="theForm" asp-action="NewPassword" asp-controller="Account" class="form-horizontal">

                        <!-- Current Password -->
                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label">Current Password: <span class="text-danger">*</span></label>
                            <div class="col-sm-8">
                                <input type="password" class="form-control" asp-for="OldPassword" placeholder="Current Password">
                                <span asp-validation-for="OldPassword" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- New Password -->
                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label">New Password: <span class="text-danger">*</span></label>
                            <div class="col-sm-8">
                                <input type="password" class="form-control" asp-for="Password" placeholder="New Password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Confirm New Password -->
                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label">Confirm New Password: <span class="text-danger">*</span></label>
                            <div class="col-sm-8">
                                <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="Confirm New Password">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Buttons: Submit and Back -->
                        <div class="form-group row">
                            <div class="col-sm-6 text-left">
                                <button type="submit" class="btn btn-success">Submit</button>
                            </div>
                            <div class="col-sm-6 text-right">
                                <a class="btn btn-dark" asp-action="Index" asp-controller="Account" >Back</a>
                            </div>
                        </div>

                        <!-- Hidden email field -->
                        <input id="EmailAddress" asp-for="EmailAddress" type="hidden" value="@ViewBag.EmailAddress" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CSS to match the form style -->
<style>
    .bsb-tpl-bg-platinum {
        background-color: #f5f5f5;
        padding: 30px;
        border-radius: 8px;
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .btn-success {
        background-color: #28a745;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
    }

    .btn-dark {
        background-color: #343a40;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
    }

    .col-form-label {
        text-align: right;
    }
</style>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
