@{
    ViewData["Title"] = "Registration Complete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="slider-section"
     style="background-image: url('/assets/img/Flag-of-Tanzania.png'); background-repeat: no-repeat; background-position: center; background-size: cover; width: 100%; height: 400px; margin: 0; padding: 0; position: relative;">
    <div class="slider-container" style="width: 100%; height: 100%;">
        <div class="slider-text" style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); margin: 0;">
            <h1 class="animated-text" style="color: #fff!important">Awaiting Approval</h1>
        </div>
    </div>
</div>

<section class="status-page section-padding">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10 col-12">
                <div class="status-card text-center">
                    <div class="status-message">
                        <p>Your registration is being reviewed by a member of our team.</p>
                        <p>Please check back for updates soon.</p>
                    </div>
                    <a asp-action="Index" asp-controller="Home" class="theme2-btn">Return to Home</a>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .status-page {
        padding: 60px 0; /* Adjust padding for the section */
    }

    .status-card {
        background-color: #f9f9f9; /* Soft background color */
        border-radius: 10px; /* Rounded corners */
        padding: 40px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1); /* Subtle shadow for depth */
        margin-top: 20px;
    }

    .status-message p {
        font-size: 18px;
        line-height: 1.8;
        color: #333;
        margin-bottom: 20px;
    }

    .theme2-btn {
        background-color: #007bff; /* Blue background */
        color: #fff;
        padding: 10px 30px;
        border-radius: 5px;
        transition: all 0.3s ease;
    }

        .theme2-btn:hover {
            background-color: #fff;
            color: #007bff; /* Blue text on hover */
            border: 2px solid #007bff;
        }

</style>

