@section scripts {
    <style>
        .progress-container {
            margin-top: 15px;
            margin-bottom: 15px;
        }

        .progress-bar {
            background-color: #28a745; /* Green color for the filled portion */
            color: white; /* Text color */
            text-align: center;
            font-weight: bold; /* Make the font bold */
            font-size: 1.5em; /* Increase the font size (adjust value as needed) */
            line-height: 25px; /* Match the height of the progress bar */
        }

       
    </style>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const collapseButtons = document.querySelectorAll('.toggle-collapse');

            collapseButtons.forEach(button => {
                const targetId = button.getAttribute('data-bs-target');
                const targetEl = document.querySelector(targetId);
                const icon = button.querySelector('i');

                // Set initial icon based on state
                if (targetEl.classList.contains('show')) {
                    icon.classList.remove('fa-plus');
                    icon.classList.add('fa-minus');
                } else {
                    icon.classList.remove('fa-minus');
                    icon.classList.add('fa-plus');
                }

                // Update icon on collapse show
                targetEl.addEventListener('show.bs.collapse', function () {
                    icon.classList.remove('fa-plus');
                    icon.classList.add('fa-minus');
                });

                // Update icon on collapse hide
                targetEl.addEventListener('hide.bs.collapse', function () {
                    icon.classList.remove('fa-minus');
                    icon.classList.add('fa-plus');
                });

                // Optional: Toggle icon immediately on click for responsiveness
                button.addEventListener('click', function () {
                    const isCollapsed = targetEl.classList.contains('show');
                    icon.classList.toggle('fa-plus', isCollapsed);
                    icon.classList.toggle('fa-minus', !isCollapsed);
                });
            });
        });
    </script>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

