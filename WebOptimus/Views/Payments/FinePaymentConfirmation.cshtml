@{
    ViewData["Title"] = "Payment Confirmation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Content Wrapper. Contains page content -->
<div class="slider-section"
     style="background-image: url('/assets/img/Flag-of-Tanzania.png'); background-repeat: no-repeat; background-position: center; background-size: cover; width: 100%; height: 400px; margin: 0; padding: 0; position: relative;">
    <div class="slider-container" style="width: 100%; height: 100%;">
        <div class="slider-text" style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); margin: 0;">
            <h2 class="animated-text" style="color: #fff!important">Payment Successful</h2>
        </div>
    </div>
</div>
<!-- /.content-header -->
<section class="content py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-lg p-4 bg-white rounded text-center">
                    <i class="fas fa-check-circle text-success" style="font-size: 80px;"></i>
                    <h2 class="text-success mt-3">Payment Successful!</h2>
                    <p class="lead">Thank you for your payment.</p>

                    <div class="alert alert-success">
                        <h5 class="mb-2"><strong>Payment Details</strong></h5>
                        <hr>
                        <p><strong>Payment Reference:</strong> <span class="text-primary">@ViewBag.Ref</span></p>                       
                        <p><strong>Total Paid:</strong> <span class="text-primary">£@ViewBag.TotalPaid</span></p>
                    </div>

                    <p>Your payment has been successfully processed. You can login to check your payment history. Thank you for your support.</p>

                    <div class="mt-4">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                            <i class="fas fa-home"></i> Home 
                        </a>
                        <a href="@Url.Action("Login", "Account")" class="btn btn-secondary">
                            <i class="fas fa-sign-in-alt"></i> Login
                        </a>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
