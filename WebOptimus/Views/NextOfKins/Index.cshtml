@model IEnumerable<WebOptimus.Models.ViewModel.Admin.NextOfKinWithDependentViewModel>
@using WebOptimus.StaticVariables
@{
    ViewData["Title"] = "Next of Kins";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!-- Content Wrapper. Contains page content -->
<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Next of Kins</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">

                <a class="btn btn-outline-success float-md-right" asp-action="AddNextOfKin" asp-controller="NextOfKins"><i class="fas fa-plus"></i> Add Next of Kin </a>
            </div><!-- /.col -->
            @*      <div class="col-sm-6">
            <a class="btn btn-xs btn-outline-primary float-md-right" style="width:100px;float:right; text-align: center;" onclick="@("window.location.href='" + @Url.Action("GetTitlePdf", "Title") + "'");"><i class="far fa-file-pdf text-danger-m1 text-120 w-2"></i> Download </a>

            </div><!-- /.col --> *@
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
@if (TempData[SD.Error] != null)
{
    <div class="alert alert-danger">
        @TempData[SD.Error]
    </div>
}

@if (TempData[SD.Success] != null)
{
    <div class="alert alert-success">
        @TempData[SD.Success]
    </div>
}



@if (Model.Count() > 0)
{
    <table class="table m-0 myTable" style="width: 100%;">
        <thead>
            <tr class="text-center">

                <th class="text-center">Member Name</th>
                <th>Reg Number</th>
                <th>Next of Kin Name</th>
                <th>Relationship</th>
                <th>Next of Kin Tel</th>
                <th>Next of Kin Email</th>             
                <th>Next of Kin Address</th>
            
                <th class="text-center">
                    Actions
                </th>
            </tr>
        </thead>
        <tbody class="text-center">

            @foreach (var item in Model)
            {
                <tr class="text-center">
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.DependentName)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.PersonRegNumber)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.NextOfKinName)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Relationship)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.NextOfKinTel)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.NextOfKinEmail)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.NextOfKinAddress)
                    </td>
                    <td style="white-space:nowrap">

                        <form asp-action="Delete" asp-controller="NextOfKins" asp-route-id="@item.Id">
                            <a asp-action="EditNextOfKin" asp-route-id="@item.Id" title="Edit" data-toggle="tooltip" style="cursor:pointer">
                                <i class="fas fa-edit"></i>
                            </a>

                            <button type="submit" onclick="return confirm('Are you sure you want to delete this?')"
                                    class="delete" title="Delete" data-toggle="tooltip">
                                <i class="fas fa-trash" style="color:red;"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <br />
    <br />
}
else
{
    <p>No record exists...</p>
}

<style>
    table td {
        word-break: break-word;
        white-space: normal !important;
    }

    .centerme {
        text-align: center !important;
        vertical-align: middle !important;
    }
</style>



<style>
    .col-20 {
        width: calc(100% / 5);
    }

    .delete {
        color: red;
    }

    .fa-unlock {
        color: green;
    }

    .unlock {
        color: red;
    }
</style>

<script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/jquery-ui.min.js"></script>
<link rel="stylesheet" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css">
<script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
<script src="~/admin/js/table.js" asp-append-version="true"></script>
